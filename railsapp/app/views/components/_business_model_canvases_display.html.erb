<div class="container mt-5">
  <div class="mt-3">
    <h2>ビジネスモデルキャンバス</h2>
    <% if business_model_canvas.present? %>
      <div class="row row-cols-1 row-cols-md-5">
        <!-- パートナー -->
        <div class="mb-3 col">
          <label class="form-label">パートナー</label>
          <div class="form-control" style="min-height:156px;"><%= simple_format(business_model_canvas.key_partners) %></div>
        </div>

        <!-- 主活動とリソース -->
        <div class="col">
          <div class="mb-3">
            <label class="form-label">主活動</label>
            <div class="form-control" style="min-height:36px;"><%= simple_format(business_model_canvas.key_activities) %></div>
          </div>
          <div class="mb-3">
            <label class="form-label">リソース</label>
            <div class="form-control" style="min-height:36px;"><%= simple_format(business_model_canvas.key_resources) %></div>
          </div>
        </div>

        <!-- 価値提案 -->
        <div class="mb-3 col">
          <label class="form-label">価値提案</label>
          <div class="form-control" style="min-height:156px;"><%= simple_format(business_model_canvas.value_propositions) %></div>
        </div>

        <!-- 顧客との関係とチャネル -->
        <div class="col">
          <div class="mb-3">
            <label class="form-label">顧客との関係</label>
            <div class="form-control" style="min-height:36px;"><%= simple_format(business_model_canvas.customer_relationships) %></div>
          </div>
          <div class="mb-3">
            <label class="form-label">チャネル</label>
            <div class="form-control" style="min-height:36px;"><%= simple_format(business_model_canvas.channels) %></div>
          </div>
        </div>

        <!-- 顧客セグメント -->
        <div class="mb-3 col">
          <label class="form-label">顧客セグメント</label>
          <div class="form-control" style="min-height:156px;"><%= simple_format(business_model_canvas.customer_segments) %></div>
        </div>
      </div>

      <!-- コスト構造と収益の流れ -->
      <div class="row row-cols-1 row-cols-md-2">
        <div class="mb-3 col">
          <label class="form-label">コスト構造</label>
          <div class="form-control" style="min-height:36px;"><%= simple_format(business_model_canvas.cost_structure) %></div>
        </div>
        <div class="mb-3 col">
          <label class="form-label">収益の流れ</label>
          <div class="form-control" style="min-height:36px;"><%= simple_format(business_model_canvas.revenue_streams) %></div>
        </div>
      </div>

      <!-- メモ -->
      <div class="mb-3">
        <label class="form-label">メモ</label>
        <div class="form-control" style="min-height:36px;"><%= simple_format(business_model_canvas.memo) %></div>
      </div>

      <!-- アクションボタン -->
      <div class="actions">
        <%= link_to '編集', edit_project_business_model_canvas_path(@project, business_model_canvas), class: 'btn btn-outline-secondary' %>
        <%= link_to '削除', project_business_model_canvas_path(@project, business_model_canvas), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: "btn btn-outline-danger" %>
      </div>
    <% else %>
      <p>ビジネスモデルキャンバスが見つかりません。</p>
    <% end %>
  </div>
</div>
