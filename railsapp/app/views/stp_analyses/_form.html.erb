<%= form_with(model: [@project, @stp_analysis], local: true) do |form| %>
	<div class="mb-3">
		<%= form.label :segmentation, 'セグメンテーシ' %>
		<%= form.text_area :segmentation, class: 'form-control', rows: 3 %>
	</div>

	<div class="mb-3">
		<%= form.label :targeting, 'ターゲティング' %>
		<%= form.text_area :targeting, class: 'form-control', rows: 3 %>
	</div>

	<div class="mb-3">
		<%= form.label :positioning, 'ポジショニング' %>
		<%= form.text_area :positioning, class: 'form-control', rows: 3 %>
	</div>

	<div class="mb-3">
		<%= form.label :memo, 'メモ' %>
		<%= form.text_area :memo, class: 'form-control', rows: 5 %>
	</div>

	<%= form.submit '保存', class: 'btn btn-primary' %>
	<%= link_to '一覧に戻る', project_path(@project), class: " btn btn-light" %>
<% end %>
