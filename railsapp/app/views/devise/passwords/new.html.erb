<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4 mx-auto">

      <h2 class="mb-4 text-center">パスワードをお忘れですか？</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,class: "needs-validation", novalidate: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, "メールアドレス", class: "form-label" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true  %>
        </div>

        <div class="actions">
          <%= f.submit "パスワード再設定の案内を送信する", class: "mt-3 btn btn-primary w-100" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>